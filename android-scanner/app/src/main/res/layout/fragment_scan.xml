<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_deep"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:keepScreenOn="true">

        <!-- Combined Compact Header: Date | Batch | Progress | % -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@color/surface_dark">

            <!-- Date -->
            <TextView
                android:id="@+id/text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_tertiary"
                android:textSize="12sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:background="@color/slate_700"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <!-- Batch Name -->
            <TextView
                android:id="@+id/text_dataset_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/primary_light"
                android:textSize="12sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:ellipsize="end" />

            <!-- Progress Info (Compact) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/text_scanned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textColor="@color/text_tertiary"
                    android:textSize="12sp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp" />

                <TextView
                    android:id="@+id/text_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/text_tertiary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="@color/primary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginStart="6dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Progress Bar (Thin) -->
        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/progress_bar" />

        <!-- Scan Input Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_input_container"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:layout_marginStart="12dp"
                    app:tint="@color/slate_400"
                    android:contentDescription="scan" />

                <EditText
                    android:id="@+id/input_scan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/scan_input_hint"
                    android:textColorHint="@color/text_muted"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:paddingStart="12dp"
                    android:paddingEnd="8dp" />

                <Button
                    android:id="@+id/btn_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="@string/btn_confirm"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_button_primary"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:layout_marginEnd="6dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Scan Viewport / Result Display Area -->
        <FrameLayout
            android:id="@+id/scan_viewport"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_scan_viewport"
            android:minHeight="180dp">

            <!-- Default waiting state -->
            <LinearLayout
                android:id="@+id/state_waiting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@android:drawable/ic_menu_camera"
                    app:tint="@color/slate_600"
                    android:alpha="0.5"
                    android:contentDescription="scan_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/waiting_scan"
                    android:textColor="@color/text_hint"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/waiting_scan_hint"
                    android:textColor="@color/text_muted"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Found state -->
            <LinearLayout
                android:id="@+id/state_found"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:id="@+id/text_zone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="72sp"
                    android:textStyle="bold"
                    android:textColor="@color/scan_found" />

                <TextView
                    android:id="@+id/text_store_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/text_duplicate_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/already_scanned"
                    android:textColor="@color/scan_duplicate"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_duplicate_tag"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Not Found state -->
            <LinearLayout
                android:id="@+id/state_not_found"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scan_not_found"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </FrameLayout>

        <!-- Records Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:orientation="vertical"
            android:background="@color/surface_dark"
            android:paddingTop="24dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:minHeight="200dp">

            <!-- Records header (REMOVED as per request to save space) -->
            <!-- Sync indicator could be moved if needed, but for now hiding the whole header row including text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginBottom="8dp">

                <!-- Sync indicator (Kept small and to the right) -->
                <LinearLayout
                    android:id="@+id/sync_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_sync_badge"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp">

                    <View
                        android:id="@+id/sync_dot"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:background="@drawable/dot_online"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SYNC"
                        android:textColor="@color/primary"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        android:textAllCaps="true" />
                </LinearLayout>
            </LinearLayout>

            <!-- Filter tabs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/filter_all"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="@string/filter_all"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_filter_active"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/filter_success"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="@string/filter_success"
                    android:textColor="@color/text_hint"
                    android:background="@drawable/bg_filter_inactive"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/filter_error"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="@string/filter_error"
                    android:textColor="@color/text_hint"
                    android:background="@drawable/bg_filter_inactive"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Records list -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_records"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:paddingBottom="8dp" />

            <!-- Empty state -->
            <LinearLayout
                android:id="@+id/empty_state"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="visible">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_menu_agenda"
                    app:tint="@color/slate_700"
                    android:alpha="0.2"
                    android:contentDescription="empty" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_records"
                    android:textColor="@color/text_muted"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
